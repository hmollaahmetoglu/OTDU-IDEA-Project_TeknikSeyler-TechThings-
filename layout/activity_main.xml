<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001258"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="379dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teknikseyler_chalk_yellow1"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/mainbtnDonustur"
        android:layout_width="379dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/constraintcolor"
        android:contentDescription="@string/unitconverter"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/unitbutton"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageButton
        android:id="@+id/mainbtnHesapla"
        android:layout_width="379dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/constraintcolor"
        android:contentDescription="@string/rtdcalculator"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainbtnOranla"
        app:srcCompat="@drawable/rtdbutton"
        tools:ignore="ImageContrastCheck" />


    <TextView
        android:id="@+id/mainHesapla"
        android:layout_width="215dp"
        android:layout_height="78dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/rtdcalculator"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FF2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mainbtnHesapla"
        app:layout_constraintEnd_toEndOf="@+id/mainbtnHesapla"
        app:layout_constraintStart_toStartOf="@+id/mainbtnHesapla"
        app:layout_constraintTop_toTopOf="@+id/mainbtnHesapla"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/maindonustur"
        android:layout_width="235dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/unitconverter"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FF2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/mainbtnDonustur"
        app:layout_constraintEnd_toEndOf="@+id/mainbtnDonustur"
        app:layout_constraintStart_toStartOf="@+id/mainbtnDonustur"
        app:layout_constraintTop_toTopOf="@+id/mainbtnDonustur"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/mainbtnOranla"
        android:layout_width="379dp"
        android:layout_height="168dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/constraintcolor"
        android:contentDescription="@string/rtdcalculator"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainbtnDonustur"
        app:srcCompat="@drawable/scalerbutton_last"
        tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/mainOranla"
        android:layout_width="265dp"
        android:layout_height="30dp"
        android:layout_marginBottom="108dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/scaler"
        android:textAlignment="center"
        android:textColor="#FF2196F3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainbtnHesapla"
        app:layout_constraintEnd_toEndOf="@+id/mainbtnOranla"
        app:layout_constraintStart_toStartOf="@+id/mainbtnOranla"
        app:layout_constraintTop_toTopOf="@+id/mainbtnOranla"
        tools:ignore="TextSizeCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>