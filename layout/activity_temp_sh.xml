<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001258"
    tools:context=".TempSh">

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#F40303"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_home_24"
        tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#F40303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:srcCompat="@drawable/baseline_arrow_circle_left_24"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tempshoutputc"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_edittext"
        android:hint="Sonuc"
        android:paddingTop="7dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/inputhinttextcolor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tempshoutputf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitbtn"
        tools:ignore="DuplicateIds,HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/tempshoutputf"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border_edittext"
        android:hint="Sonuc"
        android:paddingTop="7dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/inputhinttextcolor"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tempshoutputk"
        app:layout_constraintStart_toEndOf="@+id/tempshoutputc"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitbtn"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/mainMerhaba"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="SICAKLIK BİRİM DÖNÜŞTÜRÜCÜ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/tempshoutputk"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_edittext"
        android:hint="Sonuc"
        android:paddingTop="7dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/inputhinttextcolor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tempshoutputf"
        app:layout_constraintTop_toBottomOf="@+id/fahrenheitbtn"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/tempshmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:text="Şuanki Değeri Girin ve Birimine Dokunun"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainMerhaba"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teknikseyler_chalk_yellow1"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <EditText
        android:id="@+id/tempshinputtxt"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="126dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Sıcaklık Girin"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/inputhinttextcolor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempshmessage"
        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck,TextContrastCheck" />

    <ImageButton
        android:id="@+id/celciusbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/constraintcolor"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/fahrenheitbtn"
        app:layout_constraintTop_toBottomOf="@+id/tempshinputtxt"
        app:srcCompat="@drawable/celciusbtnsym"
        tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,HardcodedText" />

    <ImageButton
        android:id="@+id/kelvinbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/constraintcolor"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/fahrenheitbtn"
        app:layout_constraintTop_toBottomOf="@+id/tempshinputtxt"
        app:srcCompat="@drawable/kelvinbtnsym"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/fahrenheitbtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/constraintcolor"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempshinputtxt"
        app:srcCompat="@drawable/fahrenheitbtnsym"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="°C"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempshoutputc"
        app:layout_constraintEnd_toEndOf="@+id/tempshoutputc"
        app:layout_constraintTop_toTopOf="@+id/tempshoutputc"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/fahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="°F"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempshoutputf"
        app:layout_constraintEnd_toEndOf="@+id/tempshoutputf"
        app:layout_constraintTop_toTopOf="@+id/tempshoutputf"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/kelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:text="°K"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tempshoutputk"
        app:layout_constraintEnd_toEndOf="@+id/tempshoutputk"
        app:layout_constraintTop_toTopOf="@+id/tempshoutputk"
        tools:ignore="HardcodedText,TextSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>