<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#001258"
    tools:context=".ScalerSh">

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#F40303"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_home_24"
        tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="379dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teknikseyler_chalk_yellow1"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/scalerShTitle"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:text="ORANLAYICI"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/scalePrcssValue"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:text="Process Sınırları (˚C,PSI,%,vb.)"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalerShTitle"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/prcssLowVal"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Alt Sınır Değer"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalePrcssValue"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/prcssHighVal"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Üst Sınır Değer"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalePrcssValue"
        tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/hesaplama"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:text="HESAPLAMA"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scaleSignalValue"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/signalLowVal"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Alt Sınır Değer"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scaleSignalValue"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/signalHighVal"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Üst Sınır Değer"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scaleSignalValue"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/prcssValIn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Process Değeri"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesaplama"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <EditText
        android:id="@+id/signalValIn"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_edittext"
        android:ems="10"
        android:hint="Sinyal Değeri"
        android:importantForAccessibility="yes"
        android:importantForAutofill="no"
        android:inputType="numberSigned|numberDecimal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prcssValIn"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <TextView
        android:id="@+id/prcssToSignalOut"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_edittext"
        android:hint="@string/resultTextViewHint"
        android:paddingTop="14dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesaplama"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/signalToPrcssOut"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_edittext"
        android:hint="@string/resultTextViewHint"
        android:paddingTop="14dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#78909C"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prcssToSignalOut"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/resultPv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-21dp"
        android:text="PV"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signalToPrcssOut"
        app:layout_constraintStart_toStartOf="@+id/signalToPrcssOut"
        app:layout_constraintTop_toTopOf="@+id/signalToPrcssOut"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/inputPv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-23dp"
        android:text="PV"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prcssValIn"
        app:layout_constraintEnd_toEndOf="@+id/prcssValIn"
        app:layout_constraintTop_toTopOf="@+id/prcssValIn"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/inputMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-25dp"
        android:text="mA"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/signalValIn"
        app:layout_constraintEnd_toEndOf="@+id/signalValIn"
        app:layout_constraintTop_toTopOf="@+id/signalValIn"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/outputMa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-23dp"
        android:text="mA"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/prcssToSignalOut"
        app:layout_constraintStart_toStartOf="@+id/prcssToSignalOut"
        app:layout_constraintTop_toTopOf="@+id/prcssToSignalOut"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/scaleSignalValue"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"

        android:text="Sinyal Sınırları (mA,mV,V,vb.)"
        android:textAlignment="center"
        android:textColor="@color/buttontextcolor"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalePrcssValue"
        tools:ignore="HardcodedText,TextSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>